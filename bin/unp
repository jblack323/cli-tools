#!/bin/bash
#   unp
#   ~~~
#
#   Helper script for unpacking archives of any kind.
#   It detects the archive by file extension so make
#
#   :copyright: (c) Copyright 2011 by Armin Ronacher
#   :license: BSD, see LICENSE for more details
#

if [ x == x$1 ]; then
  echo 'usage: unp [filenames]'
else

  # Check for GNU Tar on systems that don't have it by default. (Solaris)
  type "gtar" &>/dev/null;

  if [ $? == 0 ]; then
    TAR=gtar
  else
    TAR=tar
  fi

  for fn in "$@"; do
    if [ -f "$fn" ]; then
      case "$fn" in
        *.tar.gz)                $TAR xvzf "$fn" ;;
        *.tgz)                   $TAR xvzf "$fn" ;;
        *.tar.bz2)               $TAR xvjf "$fn" ;;
        *.gz)                    gunzip "$fn" ;;
        *.bz2)                   bunzip2 "$fn" ;;
        *.tar)                   $TAR xvf "$fn" ;;
        *.zip|*.egg|*.jar|*.whl) unzip "$fn" ;;
        *.rar)                   unrar e "$fn" ;;
        *.7z)                    7z x "$fn" ;;
        *) echo "error: '$fn' is an unknown archive" ;;
      esac
    else
      echo "error: '$fn' is not a valid archive"
    fi
  done
fi
